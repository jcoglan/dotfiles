[user]
    name = James Coglan
    email = jcoglan@gmail.com

[alias]
    ci = commit -a
    co = checkout
    d  = diff
    dc = diff --cached
    ds = diff --stat
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    praise = blame
    st = status
    su = submodule update --init --recursive

[apply]
    whitespace = strip

[commit]
    verbose = true

[core]
    excludesfile = ~/.gitignore

[push]
    default = upstream

[rebase]
    autoStash = true

[url "git@github.com:"]
    insteadOf = gh:
