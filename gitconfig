[alias]
    ci = commit -a
    co = checkout
    st = status
    su = submodule update --init --recursive
    praise = blame
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[core]
    excludesfile = ~/.gitignore

[apply]
    whitespace = strip

[diff]
    color = auto
    rename = copy

[pager]
    color = true

[push]
    default = tracking

[status]
    color = auto

