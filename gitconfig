[user]
    name = James Coglan
    email = jcoglan@gmail.com

[core]
    excludesfile = ~/.gitignore

[apply]
    whitespace = strip
[commit]
    verbose = true
[fetch]
    prune = true
[pull]
    rebase = true
[push]
    default = upstream
[rebase]
    autoStash = true

[alias]
    ca = commit --all
    co = checkout
    d  = diff
    dc = diff --cached
    ds = diff --stat
    f  = fetch
    lg = log --graph --format='%C(yellow)%h%C(green)%d %C(blue)%an, %ar %C(reset)%n%w(72)%s%n'
    pl = pull
    ru = remote update
    sc = switch --create
    sw = switch
    st = status
    su = submodule update --init --recursive

    latest  = describe --abbrev=0
    summary = show --no-patch --date=short --pretty='format:%h ("%s", %ad)'

    delete-merged = ! git branch --merged \
                    | grep -v '^\\*' \
                    | xargs git branch --delete

    delete-gone = ! git branch --verbose \
                  | awk '$3 == \"[gone]\" { print $1 }' \
                  | xargs git branch --delete --force

[url "git@github.com:"]
    insteadOf = gh:
