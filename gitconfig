[user]
    name = James Coglan
    email = jcoglan@gmail.com

[alias]
    ci = commit -a
    co = checkout
    dc = diff --cached
    ds = diff --stat
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    praise = blame
    st = status
    su = submodule update --init --recursive

[apply]
    whitespace = strip

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[core]
    excludesfile = ~/.gitignore

[diff]
    color = auto
    rename = copy

[pager]
    color = true

[push]
    default = tracking

[rebase]
    autoStash = true

[status]
    color = auto

[url "git@github.com:"]
    insteadOf = gh:

[url "git@github.com:futurelearn/"]
    insteadOf = fl:
