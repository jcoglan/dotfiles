#!/bin/bash

# Git info in prompt
# http://railstips.org/2009/2/2/bedazzle-your-bash-prompt-with-git-info
get-git-branch() {
  ref=$(git symbolic-ref --short HEAD 2> /dev/null) || return
  echo "[$ref]"
}

if [[ -n "$BASH_VERSION" ]] ; then
  PS_BLACK='\e[0;30m'
  PS_RED='\e[0;31m'
  PS_GREEN='\e[0;32m'
  PS_YELLOW='\e[0;33m'
  PS_BLUE='\e[1;34m'
  PS_WHITE='\e[0;37m'
  PS_DEFAULT='\e[0;39m'
  PS_PWD='\w'
  PS_LF='\n'
elif [[ -n "$ZSH_VERSION" ]] ; then
  PS_BLACK='%F{black}%b'
  PS_RED='%F{red}%b'
  PS_GREEN='%F{green}%b'
  PS_YELLOW='%F{yellow}%b'
  PS_BLUE='%F{blue}%B'
  PS_WHITE='%F{white}%b'
  PS_DEFAULT='%f'
  PS_PWD='%~'
  PS_LF=$'\n'
fi

PS1="${PS_RED}(\$(get-nvm-version),\$(get-chruby-version)) ${PS_BLUE}${PS_PWD} ${PS_YELLOW}\$(get-git-branch)${PS_DEFAULT}${PS_LF}$ "

# Make Vim et al use the full color palette
if [[ "$COLORTERM" == 'gnome-terminal' ]] ; then
  export TERM=xterm-256color
fi

# Change the window title of X terminals
if [[ "$TERM" == 'screen' ]] ; then
  PROMPT_COMMAND='echo -ne "\033_${USER}@${HOSTNAME%%.*}:${PWD/$HOME/~}\033\\"'
fi
