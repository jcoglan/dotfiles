#!/bin/bash

alias ne='npm run-script'

export NVM_DIR='/opt/nvm'
NVM_SCRIPT='/usr/local/opt/nvm/nvm.sh'

if [[ -f "$NVM_SCRIPT" ]]; then
  . "$NVM_SCRIPT"
fi

nvm use default

get-nvm-version() {
  local version="$(echo "$NVM_BIN" | cut -d / -f 4)"
  if [[ "$version" == "versions" ]] ; then
    echo -n 'node-'
    echo "$NVM_BIN" | cut -d / -f 6
  else
    echo "node-$version"
  fi
}

nvm-old-versions() {
  nvm ls --no-alias |
      sed 's/.*\(v[0-9]*\).*/\1/' |
      grep '^v' |
      sort |
      uniq |
      while read v ; do
        nvm ls "$v" | sed '$ d'
      done
}

npm-run() {
  for task in $@; do
    npm run $task
    if [[ $? -ne 0 ]] ; then
      exit 1
    fi
  done
}

hash vault 2> /dev/null && . "$( vault --initpath )"
